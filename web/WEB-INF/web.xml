        <filter-name>LoginFilter</filter-name>
        <url-pattern>/student/home</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>LoginFilter</filter-name>
        <url-pattern>/student/timetable</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>LoginFilter</filter-name>
        <url-pattern>/student/viewattend</url-pattern>
    </filter-mapping>
    <servlet>
        <servlet-name>TimeTableController</servlet-name>
        <servlet-class>controller.TimeTableController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>TakeAttendanceController</servlet-name>
        <servlet-class>controller.TakeAttendanceController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ReportAttendanceController</servlet-name>
        <servlet-class>controller.ReportAttendaceController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CheckAttendController</servlet-name>
        <servlet-class>controller.CheckAttendController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoginController</servlet-name>
        <servlet-class>controller.authentication.LoginController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LogoutController</servlet-name>
        <servlet-class>controller.authentication.LogoutController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>HomeController</servlet-name>
        <servlet-class>controller.HomeController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>TimeTableStudentController</servlet-name>
        <servlet-class>controller.student.TimeTableStudentController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>HomeStudentController</servlet-name>
        <servlet-class>controller.student.HomeController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ViewAttendController</servlet-name>
        <servlet-class>controller.student.ViewAttendController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>TimeTableController</servlet-name>
        <url-pattern>/lecturer/timetable</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>TakeAttendanceController</servlet-name>
        <url-pattern>/lecturer/takeattend</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ReportAttendanceController</servlet-name>
        <url-pattern>/lecturer/reportattend</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CheckAttendController</servlet-name>
        <url-pattern>/lecturer/checkattend</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoginController</servlet-name>
        <url-pattern>/auth/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LogoutController</servlet-name>
        <url-pattern>/auth/logout</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>HomeController</servlet-name>
        <url-pattern>/lecturer/home</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>TimeTableStudentController</servlet-name>
        <url-pattern>/student/timetable</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>HomeStudentController</servlet-name>
        <url-pattern>/student/home</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ViewAttendController</servlet-name>
        <url-pattern>/student/viewattend</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
